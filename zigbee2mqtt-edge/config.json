{
  "name": "zigbee2mqtt-edge",
  "version": "test",
  "slug": "zigbee2mqtt-edge",
  "description": "Development build of the zigbee2mqtt add-on.",
  "auto_uart": true,
  "url": "https://github.com/danielwelch/hassio-zigbee2mqtt",
  "startup": "before",
  "boot": "auto",
  "map": ["share:rw"],
  "options": {
    "data_path": "/share/zigbee2mqtt",
    "homeassistant": true,
    "permit_join": false,
    "mqtt_base_topic": "zigbee2mqtt",
    "mqtt_server": "mqtt://homeassistant",
    "serial_port": "/dev/ttyACM0"
  },
  "schema": {
    "data_path": "str",
    "homeassistant": "bool",
    "permit_join": "bool",
    "mqtt_base_topic": "str",
    "mqtt_server": "str",
    "serial_port": "str",
    "mqtt_user": "str?",
    "mqtt_pass": "str?",
    "mqtt_client_id": "str?",
    "disable_led": "bool?",
    "cache_state": "bool?",
    "log_directory": "str?",
    "log_level": "match(^info|debug|warn|error$)?",
    "rtscts": "bool?"
  },
  "image": "dwelch2101/zigbee2mqtt-edge-{arch}"
}
