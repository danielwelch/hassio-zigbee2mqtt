{
  "name": "zigbee2mqtt",
  "version": "1.1.0",
  "slug": "zigbee2mqtt",
  "description": "Zigbee to MQTT Bridge",
  "auto_uart": true,
  "url": "https://github.com/danielwelch/hassio-zigbee2mqtt",
  "startup": "before",
  "boot": "auto",
  "map": ["share:rw"],
  "options": {
    "data_path": "/share/zigbee2mqtt",
    "homeassistant": true,
    "permit_join": false,
    "mqtt_base_topic": "zigbee2mqtt",
    "mqtt_server": "mqtt://homeassistant",
    "serial_port": "/dev/ttyACM0",
    "disable_led": "false",
    "devices": []
  },
  "schema": {
    "data_path": "str",
    "homeassistant": "bool",
    "permit_join": "bool",
    "mqtt_base_topic": "str",
    "mqtt_server": "str",
    "serial_port": "str",
    "baudrate": "int?",
    "mqtt_user": "str?",
    "mqtt_pass": "str?",
    "mqtt_client_id": "str?",
    "mqtt_reject_unauthorized": "bool?",
    "mqtt_include_device_information": "bool?",
    "disable_led": "bool?",
    "cache_state": "bool?",
    "log_directory": "str?",
    "log_level": "match(^info|debug|warn|error$)?",
    "rtscts": "bool?",
    "soft_reset_timeout": "int?",
    "pan_id": "str?",
    "channel": "int?",
    "network_key":"int?",
    "last_seen":"int?",
    "elapsed":"bool?",
    "zigbee_shepherd_devices": "bool?",
    "zigbee_shepherd_debug": "bool?",
    "availability_timeout": "int?",
    "devices": [
      {
        "id": "str",
        "friendly_name": "str?",
        "retain": "bool?",
        "occupancy_timeout": "int?",
        "qos": "int?"
      }
    ]
  },
  "image": "dwelch2101/zigbee2mqtt-{arch}"
}
